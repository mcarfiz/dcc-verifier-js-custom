  "AffectedFields": [
    "v.0",
    "v.0.dt"
  ],
  "Logic": {
    "if": [
      {
        "var": "payload.v.0"
      },
      {
        "before": [
          {
            "plusTime": [
                {
                    "var": "payload.v.0.dt"
                },
              14,
              "day"
            ]
          },
          {
            "plusTime": [
                {
                    "var": "external.validationClock"
                },
              0,
              "day"
            ]
          },
          {
            "plusTime": [
              {
                  "var": "payload.v.0.dt"
              },
            365,
            "day"
          ]
          }
        ]
      },
      true
    ]
  }
}