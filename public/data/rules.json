            "AffectedFields": [
                "t.0",
                "t.0.tt"
            ],
            "Logic": {
                "if": [
                    {
                        "===": [
                            {
                                "var": "payload.certType"
                            },
                            2
                        ]
                    },
                    {
                        "and": [
                            {
                                "var": "payload.testId"
                            },
                            {
                                "in": [
                                    {
                                        "var": "payload.testId"
                                    },
                                    {
                                        "var": "external.valueSets.covid-19-lab-test-type"
                                    }
                                ]
                            }
                        ]
                    },
                    true
                ]
            }
        },
        {
            "Identifier": "TR-EU-0003",
            "Type": "Acceptance",
            "Country": "EU",
            "Version": "1.0.0",
            "SchemaVersion": "1.0.0",
            "Engine": "CERTLOGIC",
            "EngineVersion": "0.7.5",
            "CertificateType": "Test",
            "Description": [
                {
                    "lang": "en",
                    "desc": "DateTime of Sample Collection must be less than 72 hours before the Verification Datetime."
                }
            ],
            "ValidFrom": "2021-07-03T00:00:00Z",
            "ValidTo": "2030-06-01T00:00:00Z",
            "AffectedFields": [
                "t.0",
                "t.0.sc"
            ],
            "Logic": {
                "if": [
                    {
                        "===": [
                            {
                                "var": "payload.certType"
                            },
                            2
                        ]
                    },
                    {
                        "and": [
                            {
                                "var": "payload.dateTest"
                            },
                            {
                                "before": [
                                    {
                                        "plusTime": [
                                            {
                                                "var": "external.validationClock"
                                            },
                                            0,
                                            "day"
                                        ]
                                    },
                                    {
                                        "plusTime": [
                                            {
                                                "var": "payload.dateTest"
                                            },
                                            72,
                                            "hour"
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    true
                ]
            }
        },
        {
            "Identifier": "TR-EU-0004",
            "Type": "Acceptance",
            "Country": "EU",
            "Version": "1.0.0",
            "SchemaVersion": "1.0.0",
            "Engine": "CERTLOGIC",
            "EngineVersion": "0.7.5",
            "CertificateType": "Test",
            "Description": [
                {
                    "lang": "en",
                    "desc": "Test result must be negative ('not detected')."
                }
            ],
            "ValidFrom": "2021-07-03T00:00:00Z",
            "ValidTo": "2030-06-01T00:00:00Z",
            "AffectedFields": [
                "t.0",
                "t.0.tr"
            ],
            "Logic": {
                "if": [
                    {
                        "===": [
                            {
                                "var": "payload.certType"
                            },
                            2
                        ]
                    },
                    {
                        "and": [
                            {
                                "var": "payload.testResult"
                            },
                            {
                                "===": [
                                    {
                                        "var": "payload.testResult"
                                    },
                                    "0"
                                ]
                            }
                        ]
                    },
                    true
                ]
            }
        },
        {
            "Identifier": "VR-EU-0001",
            "Type": "Acceptance",
            "Country": "EU",
            "Version": "1.0.0",
            "SchemaVersion": "1.0.0",
            "Engine": "CERTLOGIC",
            "EngineVersion": "0.7.5",
            "CertificateType": "Vaccination",
            "Description": [
                {
                    "lang": "en",
                    "desc": "Only vaccines in the allowed valueset that have been approved by the EMA are allowed."
                }
            ],
            "ValidFrom": "2021-07-03T00:00:00Z",
            "ValidTo": "2030-06-01T00:00:00Z",
            "AffectedFields": [
                "v.0",
                "v.0.mp"
            ],
            "Logic": {
                "if": [
                    {
                        "===": [
                            {
                                "var": "payload.certType"
                            },
                            1
                        ]
                    },
                    {
                        "and": [
                            {
                                "var": "payload.vaccine"
                            },
                            {
                                "in": [
                                    {
                                        "var": "payload.vaccine"
                                    },
                                    {
                                        "var": "external.valueSets.vaccines-covid-19-names"
                                    }
                                ]
                            }
                        ]
                    },
                    true
                ]
            }
        },
        {
            "Identifier": "VR-EU-0002",
            "Type": "Acceptance",
            "Country": "EU",
            "Version": "1.0.0",
            "SchemaVersion": "1.0.0",
            "Engine": "CERTLOGIC",
            "EngineVersion": "0.7.5",
            "CertificateType": "Vaccination",
            "Description": [
                {
                    "lang": "en",
                    "desc": "The vaccination schedule must be complete (e.g., 1/1, 2/2)."
                },
                {
                    "lang": "de",
                    "desc": "Die Impfreihe muss vollständig sein (z.B. 1/1, 2/2)."
                },
                {
                    "lang": "fr",
                    "desc": "La série vaccinale doit être complète (p. ex. 1/1, 2/2)."
                },
                {
                    "lang": "es",
                    "desc": "La pauta de vacunación debe estar completa (por ejemplo, 1/1, 2/2)."
                },
                {
                    "lang": "it",
                    "desc": "Il ciclo di vaccinazione deve essere stato completato (ad es. 1/1, 2/2)."
                }
            ],
            "ValidFrom": "2021-07-03T00:00:00Z",
            "ValidTo": "2030-06-01T00:00:00Z",
            "AffectedFields": [
                "v.0",
                "v.0.dn",
                "v.0.sd"
            ],
            "Logic": {
                "if": [
                    {
                        "===": [
                            {
                                "var": "payload.certType"
                            },
                            1
                        ]
                    },
                    {
                        "and": [
                            {
                                "var": "payload.dosesDone"
                            },
                            {
                                "var": "payload.dosesReq"
                            },
                            {
                                ">=": [
                                    {
                                        "var": "payload.dosesDone"
                                    },
                                    {
                                        "var": "payload.dosesReq"
                                    }
                                ]
                            }
                        ]
                    },
                    true
                ]
            }
        },
