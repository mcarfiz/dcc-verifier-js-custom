                                            0,
                                            "day"
                                        ]
                                    },
                                    {
                                        "plusTime": [
                                            {
                                                "var": "payload.dateVax"
                                            },
                                            365,
                                            "day"
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    true
                ]
            }
        },
