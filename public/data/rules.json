{
    "rules": [
        {
            "Identifier": "GR-EU-0000",
            "Type": "Acceptance",
            "Country": "EU",
            "Version": "1.0.0",
            "SchemaVersion": "1.0.0",
            "Engine": "CERTLOGIC",
            "EngineVersion": "0.7.5",
            "CertificateType": "General",
            "Description": [
                {
                    "lang": "en",
                    "desc": "The 'disease or  agent targeted' must be COVID-19 of the value set list."
                }
            ],
            "ValidFrom": "2021-07-03T00:00:00Z",
            "ValidTo": "2030-06-01T00:00:00Z",
            "AffectedFields": [
                "disease"
            ],
            "Logic": {
                "if": [
                    {
                        "var": "payload.disease"
                    },
                    {
                        "in": [
                            {
                                "var": "payload.disease"
                            },
                            {
                                "var": "external.valueSets.disease-agent-targeted"
                            }
                        ]
                    },
                    false
                ]
            }
        },
        {
            "Identifier": "RR-EU-0001",
            "Type": "Acceptance",
            "Country": "EU",
            "Version": "1.0.0",
            "SchemaVersion": "1.0.0",
            "Engine": "CERTLOGIC",
            "EngineVersion": "0.7.5",
            "CertificateType": "Recovery",
            "Description": [
                {
                    "lang": "en",
                    "desc": "The Verification Datetime must be between 'Certificate Valid From' and 'Certificate Valid Until'."
                }
            ],
            "ValidFrom": "2021-07-03T00:00:00Z",
            "ValidTo": "2030-06-01T00:00:00Z",
            "AffectedFields": [
                "r.0",
                "r.0.df",
                "r.0.du"
            ],
            "Logic": {
                "if": [
                    {
                        "===": [
                            {
                                "var": "payload.certType"
                            },
                            3
                        ]
                    },
                    {
                        "and": [
                            {
                                "var": "payload.dateDf"
                            },
                            {
                                "var": "payload.dateDu"
                            },
                            {
                                "not-after": [
                                    {
                                        "plusTime": [
                                            {
                                                "var": "payload.dateDf"
                                            },
                                            0,
                                            "day"
                                        ]
                                    },
                                    {
                                        "plusTime": [
                                            {
                                                "var": "external.validationClock"
                                            },
                                            0,
                                            "day"
                                        ]
                                    },
                                    {
                                        "plusTime": [
                                            {
                                                "var": "payload.dateDu"
                                            },
                                            0,
                                            "day"
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    true
                ]
            }
        },
        {
            "Identifier": "RR-EU-0002",
            "Type": "Acceptance",
            "Country": "EU",
            "Version": "1.0.0",
            "SchemaVersion": "1.0.0",
            "Engine": "CERTLOGIC",
            "EngineVersion": "0.7.5",
            "CertificateType": "Recovery",
            "Description": [
                {
                    "lang": "en",
                    "desc": "The validity start date must be greater than or equal to the first positive test date +11 days and validity and date must be less than or equal to the first postive test date +180."
                }
            ],
            "ValidFrom": "2021-07-03T00:00:00Z",
            "ValidTo": "2030-06-01T00:00:00Z",
            "AffectedFields": [
                "r.0",
                "r.0.df",
                "r.0.du",
                "r.0.fr"
            ],
            "Logic": {
                "if": [
                    {
                        "===": [
                            {
                                "var": "payload.certType"
                            },
                            3
                        ]
                    },
                    {
                        "and": [
                            {
                                "var": "payload.dateDf"
                            },
                            {
                                "var": "payload.dateDu"
                            },
                            {
                                "var": "payload.dateFr"
                            },
                            {
                                "not-before": [
                                    {
                                        "plusTime": [
                                            {
                                                "var": "payload.dateDf"
                                            },
                                            0,
                                            "day"
                                        ]
                                    },
                                    {
                                        "plusTime": [
                                            {
                                                "var": "payload.dateFr"
                                            },
                                            11,
                                            "day"
                                        ]
                                    }
                                ]
                            },
                            {
                                "not-after": [
                                    {
                                        "plusTime": [
                                            {
                                                "var": "payload.dateDu"
                                            },
                                            0,
                                            "day"
                                        ]
                                    },
                                    {
                                        "plusTime": [
                                            {
                                                "var": "payload.dateFr"
                                            },
                                            180,
                                            "day"
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    true
                ]
            }
        },
        {
            "Identifier": "TR-EU-0001",
            "Type": "Acceptance",
            "Country": "EU",
            "Version": "1.0.0",
            "SchemaVersion": "1.0.0",
            "Engine": "CERTLOGIC",
            "EngineVersion": "0.7.5",
